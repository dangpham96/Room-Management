<% provide :title, t("room") %>
<div>
  <h1><%= t("room") %></h1>
</div>

<div class= "col-lg-12">
  <div class="col-lg-6"> 
    <%= link_to t("add_room"), new_room_path, class: "btn btn-primary" %>
  </div>
  <div class="col-lg-6">
    <div class="col-lg-6" id="search_ip">
    <%= select_tag :status, options_for_select(enum_options_for_select(Room, :status).insert(0, t("search"))), class: "form-control", id: "find_by_status_room" %>
    </div>
  </div>
</div>

<div id= "list_room">
  <%= render "rooms/list_room" %>  
</div>
