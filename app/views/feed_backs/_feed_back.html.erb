<tr>
  <td><span><%= get_index_page feed_back_counter %> </span></td>
  <td><span><%= feed_back.user_name %></span></td>
  <td><span><%= feed_back.title %></span></td>
  <td><span><%= feed_back.detail %></span></td>
  <td>
    <div class="btn-group btn-group-sm" id="<%= "form-combo-#{feed_back.id}" %>">
      <%= form_for feed_back, remote: true, authenticity_token: true do |f| %>
        <div class="row">
          <div class="col">
            <%= f.select :status, enum_options_for_select(FeedBack, :status), {include_blank: false},
            onChange: "javascript: this.form.submit_form.click();", class: "form-control" %>
          </div>
        </div>
        <%= f.submit name: :submit_form, remote: true, class: "d-none" %>
      <% end %>
    </div>
  </td>
  <td><span><%= feed_back.created_at.strftime(t("format_time")) %></span></td>

  <td>
    <%= link_to feed_back, title: t("show"), class: "btn btn-info btn-sm" do %>
      <i class="fa fa-eye"></i>
    <% end %>
    <%= link_to edit_feed_back_path(feed_back), title: t("edit"), class: "btn btn-warning btn-sm" do %>
      <i class="fa fa-edit"></i>
    <% end %>
    <%= link_to feed_back, title: t("delete"), method: :delete, data: {confirm: t("sure")}, class: "btn btn-danger btn-sm" do %>
      <i class="fa fa-trash"></i>
    <% end %>
  </td>
</tr>
