<tr>
  <td><span><%= get_index_page service_counter %> </span></td>
  <td><span><%= service.name %></span></td>
  <td><span><%= number_to_vnd service.price %></span></td>
  <td>
    <%= link_to service, title: t("show"), class: "btn btn-info btn-sm" do %>
      <i class="fa fa-eye"></i>
    <% end %>
    <%= link_to edit_service_path(service), title: t("edit"), class: "btn btn-warning btn-sm" do %>
      <i class="fa fa-edit"></i>
    <% end %>
    <%= link_to service, title: t("delete"), method: :delete, data: {confirm: t("sure")}, class: "btn btn-danger btn-sm" do %>
      <i class="fa fa-trash"></i>
    <% end %>
  </td>
</tr>
