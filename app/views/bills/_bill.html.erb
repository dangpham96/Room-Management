<tr>
  <td><span><%= get_index_page bill_counter %> </span></td>
  <td><span><%= bill.user_name %></span></td>
  <td><span><%= number_to_vnd bill.room_price %></span></td>
  <td><span><%= bill.electrical_number %></span></td>
  <td><span><%= bill.created_at.strftime(t("format_time"))%></span></td>
  <td><span><%= bill.updated_at.strftime(t("format_time"))%></span></td>
  <td>
    <%= link_to room_bill_path(id: bill.id), class: "btn btn-info btn-sm" do %>
      <i class="fa fa-eye"></i>
    <% end %>
    <%= link_to edit_room_bill_path(id: bill.id), title: t("edit"), class: "btn btn-warning btn-sm" do %>
      <i class="fa fa-edit"></i>
    <% end %>
    <%= link_to room_bill_path(id: bill.id), title: t("delete"), method: :delete, data: {confirm: t("sure")}, class: "btn btn-danger btn-sm" do %>
      <i class="fa fa-trash"></i>
    <% end %>
  </td>
</tr>
