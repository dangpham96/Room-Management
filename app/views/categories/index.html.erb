<% provide :title, "Category" %>
<div>
<h1><%= t("category") %></h1>
<%= link_to t("add_category"), new_category_path,  class: "btn btn-primary" %>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="main-box no-header clearfix">
      <div class="main-box-body clearfix">
        <div class="table-responsive">
          <table class="table user-list">
            <thead>
              <tr>
                <th><span><%= t("name") %></span></th>
                <th><span><%= t("price") %></span></th>
                <th><span><%= t("action") %></th>
              </tr>
            </thead>
              <tbody>
                <%= render partial: "category", collection: @categorys %>
              </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
<%= paginate @categorys, theme: t("theme_paging") %>
