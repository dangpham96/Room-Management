<tr>
  <td><span><%= get_index_page category_counter %></span></td>
  <td><span><%= category.name %></span></td>
  <td><span><%= number_to_vnd category.price %></span></td>
  <td>
    <%= link_to category, title: t("show"), class: "btn btn-info btn-sm" do %>
      <i class="fa fa-eye"></i>
    <% end %>
    <%= link_to edit_category_path(category), title: t("edit"), class: "btn btn-warning btn-sm" do %>
      <i class="fa fa-edit"></i>
    <% end %>
    <%= link_to category, title: t("delete"), method: :delete, data: {confirm: t("sure")}, class: "btn btn-danger btn-sm" do %>
      <i class="fa fa-trash"></i>
    <% end %>
  </td>
</tr>
